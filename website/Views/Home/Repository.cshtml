@using Newtonsoft.Json.Linq
@model JObject
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<style type="text/css">
    .glyphicon-refresh-animate {
        -animation: spin .7s infinite linear;
        -webkit-animation: spin2 .7s infinite linear;
    }

    @@-webkit-keyframes spin2 {
        from {
            -webkit-transform: rotate(0deg);
        }

        to {
            -webkit-transform: rotate(360deg);
        }
    }

    @@keyframes spin {
        from {
            transform: scale(1) rotate(0deg);
        }

        to {
            transform: scale(1) rotate(360deg);
        }
    }
</style>
<div>
    <h1 class="page-header"><a href="@Model["HtmlUrl"]">@Model["FullName"]</a></h1>
    <h2><span class="glyphicon glyphicon-star"></span><span>&ensp;@Model["StargazersCount"]</span></h2>
    <h2>Мова: @Model["Language"]</h2>
</div>
<br />
<br />
<br />
<div class="pull-right" style="padding-right:10px">
    <div id="loader">
        <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>
        Зачекайте, це займе деякий час...
    </div>
    Побудувати діаграми за останній @Html.DropDownList("period", new List<SelectListItem>
{
    new SelectListItem(){
        Text = "тиждень",
        Value = "0"
    },
    new SelectListItem(){
            Text = "місяць",
            Value = "1"
    }
})
    <br />
</div>
<div id="stars" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<br />
<div id="contributors" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<br />
<div id="commits" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<script type="text/javascript">
    $(function (id) {
        update(0);
        $("#period").change(function () {
            var val = $(this).children(":selected").attr("value");
            update(val);
        });
    });

    function update(type) {
        $('#loader').show();
        var status = 0;
        //stars
        $.getJSON('@Url.Action("GetStargazers", "Api", new {name = Model["FullName"]})&type=' + type, function (data) {

            $('#stars').highcharts({
                chart: {
                    zoomType: 'x'
                },
                title: {
                    text: 'Зірочок'
                },
                subtitle: {
                    text: document.ontouchstart === undefined ?
                            'Натисніть та перетягуйте на графіку для збільшення' : 'Натисніть на графік для збільшення'
                },
                xAxis: {
                    type: 'datetime',
                    categories: data.days
                },
                yAxis: {
                    title: {
                        text: 'Зірочок'
                    }
                },
                legend: {
                    enabled: false
                },
                plotOptions: {
                    area: {
                        fillColor: {
                            linearGradient: {
                                x1: 0,
                                y1: 0,
                                x2: 0,
                                y2: 1
                            },
                            stops: [
                                [0, Highcharts.getOptions().colors[0]],
                                [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                            ]
                        },
                        marker: {
                            radius: 2
                        },
                        lineWidth: 1,
                        states: {
                            hover: {
                                lineWidth: 1
                            }
                        },
                        threshold: null
                    }
                },

                series: [{
                    type: 'area',
                    name: 'Зірочок',
                    data: data.stars
                }]
            });
        })
            .done(function () {
                loaderChanger();
        });
        //contributors
        $.getJSON('@Url.Action("GetContributors", "Api", new {name = Model["FullName"]})&type=' + type, function (data) {

            $('#contributors').highcharts({
                chart: {
                    zoomType: 'x'
                },
                title: {
                    text: 'Унікальних контриб\'юторів'
                },
                subtitle: {
                    text: document.ontouchstart === undefined ?
                            'Натисніть та перетягуйте на графіку для збільшення' : 'Натисніть на графік для збільшення'
                },
                xAxis: {
                    type: 'datetime',
                    categories: data.days
                },
                yAxis: {
                    title: {
                        text: 'Унікальних контриб\'юторів'
                    }
                },
                legend: {
                    enabled: false
                },
                plotOptions: {
                    area: {
                        fillColor: {
                            linearGradient: {
                                x1: 0,
                                y1: 0,
                                x2: 0,
                                y2: 1
                            },
                            stops: [
                                [0, Highcharts.getOptions().colors[0]],
                                [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                            ]
                        },
                        marker: {
                            radius: 2
                        },
                        lineWidth: 1,
                        states: {
                            hover: {
                                lineWidth: 1
                            }
                        },
                        threshold: null
                    }
                },

                series: [{
                    type: 'area',
                    name: 'Котриб\'юторів',
                    data: data.contributors
                }]
            });
        })
            .done(function () {
                loaderChanger();
        });
        //commits
        $.getJSON('@Url.Action("GetCommits", "Api", new {name = Model["FullName"]})&type=' + type, function (data) {

            $('#commits').highcharts({
                chart: {
                    zoomType: 'x'
                },
                title: {
                    text: 'Комітів'
                },
                subtitle: {
                    text: document.ontouchstart === undefined ?
                            'Натисніть та перетягуйте на графіку для збільшення' : 'Натисніть на графік для збільшення'
                },
                xAxis: {
                    type: 'datetime',
                    categories: data.days
                },
                yAxis: {
                    title: {
                        text: 'Комітів'
                    }
                },
                legend: {
                    enabled: false
                },
                plotOptions: {
                    area: {
                        fillColor: {
                            linearGradient: {
                                x1: 0,
                                y1: 0,
                                x2: 0,
                                y2: 1
                            },
                            stops: [
                                [0, Highcharts.getOptions().colors[0]],
                                [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                            ]
                        },
                        marker: {
                            radius: 2
                        },
                        lineWidth: 1,
                        states: {
                            hover: {
                                lineWidth: 1
                            }
                        },
                        threshold: null
                    }
                },

                series: [{
                    type: 'area',
                    name: 'Комітів',
                    data: data.commits
                }]
            });
        })
            .done(function () {
                loaderChanger();
            });
        function loaderChanger() {
            status += 1;
            if (status === 3)
                $('#loader').hide();
        }
    }
</script>